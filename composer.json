{
    "name": "drewlabs/validation",
    "description": "Provides validation implementation using view model or array. It provides a wrapper arround laravel fluent validator factory class, but is attempt to be framework agnostic",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Drewlabs\\Validation\\": "src/"
        },
        "files": [
            "./src/proxies.php"
        ]
    },
    "keywords": [
        "validation",
        "fluent"
    ],
    "autoload-dev": {
        "psr-4": {
            "Drewlabs\\Validation\\Tests\\": "tests/"
        }
    },
    "authors": [{
        "name": "azandrew-sidoine",
        "email": "asmyns.platonnas29@gmail.com"
    }],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "require": {
        "php": ">=7.3",
        "drewlabs/contracts": "^0.2|^2.0",
        "drewlabs/core-helpers": "^0.2|^2.0",
        "drewlabs/overloadable": "^0.1.0"
    },
    "repositories": [{
            "type": "vcs",
            "url": "git@github.com:liksoft/drewlabs-php-contracts.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:liksoft/drewlabs-php-core-helpers.git"
        }, 
        {
            "type": "vcs",
            "url": "https://github.com/liksoft/drewlabs-php-overloadable.git"
        }
    ]
}